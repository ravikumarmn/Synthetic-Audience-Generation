# RAG Duplicate Detection Configuration
# Copy to .env or add to your existing .env file

# Enable/disable RAG duplicate detection
RAG_ENABLED=true

# Similarity threshold for duplicate detection (0.0 to 1.0)
# Higher values = stricter duplicate detection
# 0.85 = Very similar content will be considered duplicates
# 0.70 = Moderately similar content will be considered duplicates
# 0.95 = Only nearly identical content will be considered duplicates
RAG_SIMILARITY_THRESHOLD=0.85

# Embedding model for similarity calculation
# Options: all-MiniLM-L6-v2 (fast, good quality), all-mpnet-base-v2 (slower, better quality)
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Section-specific thresholds (optional, overrides global threshold)
RAG_ABOUT_THRESHOLD=0.85
RAG_GOALS_THRESHOLD=0.80
RAG_FRUSTRATIONS_THRESHOLD=0.80
RAG_NEED_STATE_THRESHOLD=0.85
RAG_OCCASIONS_THRESHOLD=0.75

# RAG performance settings
RAG_MAX_GENERATION_ATTEMPTS=3
RAG_ENABLE_STATS_LOGGING=true

# Memory management
RAG_AUTO_CLEAR_THRESHOLD=1000  # Clear memory after N profiles
RAG_ENABLE_MEMORY_MONITORING=true
